<% truths = [] %>
<% nonzero = [] %>
<% uniqs = [] %>
<%  Shift.where(day: days).each { |shift| truths << (shift.assignments.count == 3) } %>
<%  Shift.where(day: days).each { |shift| truths << (shift.assignments.count > 0) } %>
<%  Shift.where(day: days).uniq { |shift| uniqs << (shift.assignments.count) } %>
